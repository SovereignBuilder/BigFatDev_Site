---
import Layout from "../../components/Layout.astro";
---

<Layout title="Contact / Support" description="Support the work, or get in touch." currentPath="/support">
  <section class="content">
    <h1>Contact / Support</h1>
    <p class="meta">This page is intentionally minimal. More links will arrive later.</p>
  </section>

  <section style="margin-top: 28px;" class="grid-3">
    <div class="card">
      <h3>Contact</h3>
      <p>Email: <strong>mj@placeholder.example</strong></p>
      <p class="meta">More contact methods will come later.</p>
    </div>
    <div class="card">
      <h3>Support</h3>
      <p>One simple option for now.</p>
      <div style="margin-top: 14px;">
        <a class="btn primary" href="#">Support my work</a>
      </div>
    </div>
  </section>
</Layout>
